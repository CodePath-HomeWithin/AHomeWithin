<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorPrimaryLight">@color/colorPrimaryLight</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">fonts/Roboto-LightItalic.ttf</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Widget"/>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-BoldItalic.ttf</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>

    </style>

    <style name="conv_card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">28sp</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>

    </style>

    <style name="conv_card_header_titles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/conv_text_big</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>

    </style>

    <style name="conv_card_section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@+id/linearLayoutHeader</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/conv_text_big</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>

    </style>

    <style name="conv_card_sections_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/conv_text_regular</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>

    </style>

    <style name="conv_card_quote_body">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/conv_text_big</item>
        <item name="fontPath">fonts/Roboto-LightItalic.ttf</item>

    </style>

    <style name="conv_card_quote_author">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/conv_text_regular</item>
        <item name="android:textStyle">italic</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>

    </style>

    <!-- Home application theme. -->
    <style name="HomePage">
        <item name="android:layout_margin">@dimen/map_popup_margin</item>
    </style>

    <style name="HomePage.Image" parent="HomePage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Map application theme. -->
    <style name="MapInfoWindow">
        <!--<item name="android:background">@color/colorTextIcons</item>-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MapInfoWindow.Title" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/conv_text_big</item>
        <item name="fontPath">fonts/RobotoMedium.ttf</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="MapInfoWindow.Subtitle">
        <item name="android:textStyle">italic</item>
        <item name="fontPath">fonts/RobotoMedium.ttf</item>
        <item name="android:textSize">@dimen/conv_text_regular</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MapInfoWindow.Body">
        <item name="android:textSize">@dimen/conv_text_regular</item>
        <item name="fontPath">fonts/RobotoMedium.ttf</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="MapInfoWindow.Button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingRight">@dimen/map_popup_margin</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- Recommended theme. -->
    <style name="Recommended">
    </style>

    <style name="RecommendedText" parent="conv_card_sections_body">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="RecommendedText.Title" parent="RecommendedText">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textSize">@dimen/conv_text_big</item>
     </style>

    <style name="RecommendedText.Body" parent="RecommendedText">
        <item name="android:textSize">@dimen/conv_text_regular</item>
    </style>


    <!-- Home Menu theme. -->
    <style name="home_menu_item_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="home_menu_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>

    </style>

    <style name="home_menu_title_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#44000000</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="detail_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>

    </style>

    <style name="detail_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#455a64</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>

    </style>

    <style name="RobotoCondensed">
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>

    <style name="RobotoLight">
        <item name="fontPath">fonts/RobotoCondensed-Light.ttf</item>
    </style>

    <style name="RobotoMedium">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <!-- Event List page -->
    <style name="EventList.EventName" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EventList.Date" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/conv_text_big</item>
        <item name="fontPath">fonts/RobotoCondensed-Light.ttf</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">italic</item>
    </style>

<!-- Event Detail page -->

    <style name="EventDetailLayout">
        <item name="android:padding">@dimen/map_popup_margin</item>
    </style>

    <style name="EventDetail.GroupName" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/conv_text_big</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="EventDetail.EventName" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">28sp</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EventDetail.EventTime" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">22sp</item>
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="EventDetail.Body" parent="conv_card_sections_body">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="button_standard">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>


</resources>
