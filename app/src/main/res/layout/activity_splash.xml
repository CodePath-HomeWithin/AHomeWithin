<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:padding="30dp"
    android:id="@+id/rlSplashScreen">


    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLargeHouse"
        android:rotation="270"
        android:scaleX="1"
        android:scaleY="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ahw_logo_large"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivSmallHouse"
        android:rotation="45"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ahw_logo_small"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivAHome"
        android:paddingRight="12dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ahw_logo_ahome"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivWithin"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ahw_logo_within"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>