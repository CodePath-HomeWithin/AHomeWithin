<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_marginTop="16dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivProfileOther"
        android:layout_width="@dimen/chat_profile_image_width"
        android:layout_height="@dimen/chat_profile_image_height"
        android:contentDescription="@string/profile_other"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:lines="3"
        tools:text="Esto es una prueba lo suficientementh"
        android:textSize="14sp">
    </TextView>

    <ImageView
        android:id="@+id/ivProfileMe"
        android:layout_width="@dimen/chat_profile_image_width"
        android:layout_height="@dimen/chat_profile_image_height"
        android:contentDescription="@string/profile_me"
        android:src="@mipmap/ic_launcher"/>
</LinearLayout>
