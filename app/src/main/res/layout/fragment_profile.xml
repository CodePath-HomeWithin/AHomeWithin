<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvProfileTitle"
        style="@style/conv_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/your_profile"
        android:textSize="@dimen/big_title_size"
        android:layout_margin="16dp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/tvProfileTitle"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change photo"
        android:layout_below="@+id/ivProfileImage"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/llName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/ivProfileImage"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/titleName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Name: "/>

        <EditText
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:textColor="@color/colorPrimaryText"
            android:layout_height="@dimen/profile_edittext_height"
            tools:text="Lubna Dani"/>

        <ImageView
            android:id="@+id/ivButtonEditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_edit_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/llName"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/titleEmail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
    android:text="Email: "/>

    <EditText
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:textColor="@color/colorPrimaryText"
        android:layout_height="@dimen/profile_edittext_height"
        tools:text="lubna.dani@gmail.com"/>

    <ImageView
        android:id="@+id/ivButtonEditEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:tint="@color/colorAccent"
        android:src="@drawable/ic_edit_24dp"/>

</LinearLayout>


    <LinearLayout
        android:id="@+id/llPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/llEmail"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/titlePhone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Phone: "/>

        <EditText
            android:id="@+id/tvPhone"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:textColor="@color/colorPrimaryText"
            android:layout_height="@dimen/profile_edittext_height"
            tools:text="0034-647213491"/>

        <ImageView
            android:id="@+id/ivButtonEditPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_edit_24dp"/>

    </LinearLayout>

</RelativeLayout>