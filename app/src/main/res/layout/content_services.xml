<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pro_bono_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pro_bono_title"
        android:textAppearance="@style/TitleTextAppearance"
        android:padding="10dp"/>

    <FrameLayout
        android:id="@+id/flMap"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/pro_bono_title">
        <include layout="@layout/fragment_map"   />
    </FrameLayout>

    <TextView
        android:id="@+id/events_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/events_title"
        android:textAppearance="@style/TitleTextAppearance"
        android:layout_below="@+id/flMap"
        android:padding="10dp"/>

    <FrameLayout
        android:id="@+id/flEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/events_title">
    </FrameLayout>

</RelativeLayout>